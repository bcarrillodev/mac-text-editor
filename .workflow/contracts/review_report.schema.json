{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "workflow/contracts/review_report.schema.v1.json",
  "title": "ReviewReportV1",
  "type": "object",
  "required": ["schema_version", "decision", "summary"],
  "properties": {
    "schema_version": {
      "type": "string",
      "const": "1.0.0"
    },
    "decision": {
      "type": "string",
      "enum": ["MERGE_APPROVED", "REJECTED"]
    },
    "summary": {
      "type": "string",
      "minLength": 1
    },
    "issues": {
      "type": "array",
      "items": {
        "type": "string",
        "minLength": 1
      }
    }
  },
  "additionalProperties": false
}
